{
    "themeName" : "dark",

    "%{../ui.common.json}": null,

    "font"          : { ".font" : ["Arial", 14] },
    "boldFont"      : { ".font" : ["Arial", "bold", 12] },
    "smallFont"     : { ".font" : ["Arial", 10] },

    "palette": {
        "white"      : "#FFFFFF",
        "black"      : "#000000",
        "fontColor"  : "#808080",
        "gray"       : "#A1A1A1"
    },

    "#views" : {
        "raised" : { "@zebkit.draw.Raised":[] },
        "sunken" : { "@zebkit.draw.Sunken":[] },
        "etched" : { "@zebkit.draw.Etched":[] },
        "plain"  : { ".border": [ "red", 1, 6 ] },
        "dot"    : { "@zebkit.draw.Dotted" : []  }
    },

    "BoldLabel": {
        "font": "%{boldFont}"
    },

    "Link": {
        "font":  [ "Arial", "italic", 14],
        "colors"      : {
            "pressed.over" : "red",
            "out"          : "red",
            "over"         : "orange",
            "pressed.out"  : "red",
            "disabled"     : "gray"
        },
        "canHaveFocus": false
    },

    "Button": {
        "Link": {
            "font":  ["Arial", "bold italic", 16],
            "colors"      : {
                "pressed.over" : "white",
                "out"          : "white",
                "over"         : "white",
                "pressed.out"  : "lightGray",
                "disabled"     : "gray"
            },
            "canHaveFocus": false
        },

        "Label": {
            "font": ["Arial", "bold", 16],
            "disabledColor": "white",
            "color" : "white"
        },

        "ImageLabel": {
            "Label" : {
                "font": ["Arial", "bold", 16],
                "disabledColor": "white",
                "color" : "white"
            }
        },

        "flowLayout": ["center", "center", "horizontal", 2],

        "background"   : {
            "pressed.over": { ".gradient": [ "red", "orange" ] },
            "disabled" : "lightGray",
            "*"        : { ".gradient": [ "orange", "red"  ] }
        },

        "border": {
            "*" : { ".border" : [ null, 1, 8 ]},
            "pressed.out"  : { ".border" : [ "black", 1, 8 ]},
            "over"  : { ".border" : [ "#F08763", 3, 8 ]},
            "out"   : { ".border" : [ "gray", 1, 8 ]}
        },

        "focusMarkerView" : null,
        "padding"         : 8
    },

    "ArrowButton": {
        "padding"   : 2,
        "stretchArrow": false,
        "arrowSize": 10,
        "stateProperties" : {
            "out"          : { "fillColor" :  "deepPink"},
            "over"         : { "fillColor" :  "red"},
            "pressed.over" : { "fillColor" :  "blue"},
            "pressed.out"  : { "fillColor" :  "blue"},
            "disabled"     : { "fillColor" :  "#CCCCCC" }
        }
    },

    "Checkbox": {
        "Box": {
            "preferredSize": [ 18, 18],
            "border"       : { ".border" : [ "orange", 2, 4 ] },
            "background"   : {
                "*": { ".gradient": [ "red", "orange" ] },
                "disabled": "lightGray",
                "pressed.disabled" : "lightGray"
            },
            "view": {
                "pressed.out"        : { "@zebkit.draw.CheckboxView": [ "black"] },
                "out"                : { "@zebkit.draw.View": [] },
                "over"               : { "@zebkit.draw.View": [] },
                "pressed.over"       : { "@zebkit.draw.CheckboxView": [ "white" ] },
                "pressed.disabled"   : { "@zebkit.draw.CheckboxView": [ "#AAAAAA" ] },
                "disabled"           : { "@zebkit.draw.View": [] }
            }
        },

        "Label": {
            "disabledColor": "lightGray",
            "color": "white",
            "font"  : "bold"
        },

        "flowLayout" : [ "left", "center", "horizontal", 6 ],
        "border" : {
            "focuson" :  "plain",
            "focusoff":  { "@zebkit.draw.View" : [] }
        },
        "padding": [4, 10, 4, 10]
    },


    "Radiobox": {
        "inheritProperties" : true,

        "Label": {
            "disabledColor": "lightGray",
            "color" : "white",
            "font"  : "bold"
        },

        "Box": {
            "preferredSize": [ 18, 18 ],
            "border"       : { "@zebkit.draw.RoundBorder":["orange", 2] },
            "background"   : {
                "*" : { ".gradient": [ "red", "orange" ] },
                "disabled": "lightGray",
                "pressed.disabled" : "lightGray"
            },
            "view": {
                "pressed.out"       : { "@zebkit.draw.RadioView" : [ "black", "black" ]  },
                "out"               : { "@zebkit.draw.View" : []  },
                "over"              : { "@zebkit.draw.View" : [] },
                "pressed.over"      : { "@zebkit.draw.RadioView" : [ "white", "white" ] },
                "pressed.disabled"  : { "@zebkit.draw.RadioView" : [ "#AAAAAA", "#AAAAAA"] },
                "disabled"          : { "@zebkit.draw.View" : [] }
            }
        }
    },

    "BorderPan": {
        "Label": {
            "font" : "120%",
            "color": "orange"
        },

        "ImageLabel" : {
            "Label": {
                "font" : "120%",
                "color": "orange"
            }
        },

        "Checkbox": {
            "inheritProperties" : true,
            "Label": {
                "font" : "120%",
                "color": "orange"
            }
        },

        "border": { ".border": [ "red", 1, 6 ] }
    },

    "SplitPan": {
        "Bar": {
            "border" : {
                "*"     : { ".border" : [ "#DD2255", 1, 2] },
                "over"  : { ".border" : [ "#DD2255", 2, 2] },
                "pressed.*": { ".border" : [ "red", 2, 2] }
            },

            "background"    :  "#990000",
            "preferredSize" : [ 6, 6 ]
        }
    },

    "Scroll" : {
        "LeftArrowButton": {
            "padding" : 0,
            "direction": "right",
            "preferredSize":[ 12, 12 ]
        },

        "RightArrowButton": {
            "padding" : 0,
            "direction" : "left",
            "preferredSize":[ 12, 12 ]
        },

        "TopArrowButton": {
            "padding" : 0,
            "direction" : "bottom",
            "preferredSize": [ 12, 12 ]
        },

        "BottomArrowButton": {
            "padding" : 0,
            "direction" : "top",
            "preferredSize":[ 12, 12]
        },

        "VerticalThumb": {
            "padding":1,
            "preferredSize" : [8, -1],
            "view" : { "@zebkit.draw.ThumbView": [ "vertical", null, "#DD2255"] }
        },

        "HorizontalThumb": {
            "padding":1,
            "preferredSize" : [ -1, 8 ],
            "view" : { "@zebkit.draw.ThumbView": [ "horizontal", null, "#DD2255" ] }
        },

        "background":  null,
        "padding"   : 1,
        "border"    : { ".border": [ null, 0, 4 ] }
    },

    "ScrollPan": {
        "autoHide": "%{<js> window.innerWidth < 600}"
    },

    "TextField": {
        "HintRender" : {
            "inheritProperties" : true,
            "font": ["Arial", "bold italic", 12],
            "color" : "#C1C1C1"
        },

        "border" : {
            "focuson" :  { ".border" : [ "orange", 2 ] },
            "focusoff":  { ".border" : [ "orange", 1 ] }
        },

        "background"    : { ".gradient" : [ "black", "#444444" ]},
        "selectView"    : "#F29879",
        "color"         : "red",
        "cursorWidth"   : 2,
        "font"          : "%{font}",
        "cursorView"    : "white",
        "padding"       : [4,4,4,4]
    },

    "TextArea" : {
        "inheritProperties" : true
    },

    "PassTextField" : {
        "HintRender" : {
            "font": ["Arial", "bold italic", 12],
            "color" : "#C1C1C1"
        },

        "inheritProperties" : true
    },

    "Progress": {
        "border"    : { ".border" : [ "red", 1, 3] },
        "barView"   : "orange",
        "padding"   : 2
    },

    "Tabs": {
        "TabView": {
            "TabPan": {
                "padding" : 4,
                "flowLayout": 4
            },

            "captionRender"    : "%{zebkit.draw.StringRender}",
            "fontColor"        : "white",
            "selectedFontColor": "red",
            "font"             : "bold",
            "selectedFont"     : ["Arial", "bold", 14 ]
        },

        "border" : null,
        "views"  : {
            "outTab"      : null,
            "overTab"     : "orange",
            "selectedTab" : { ".border": [ "orange", 2, 0, "top" ]},
            "marker"      : null
        },

        "pageGaps": [2, 2]
    },

    "BaseList": {
        "views" :  {
            "select"    : { ".border" : ["orange", 1, 6 ] },
            "topMarker" : { ".border" : ["orange", 1, 6 ] },
            "marker"    : { ".border" : ["orange", 1, 6 ] }
        },

        "border" : {
            "focuson" :  { ".border" : [ "orange", 2 ] },
            "focusoff":  { ".border" : [ "orange", 1 ] }
        },

        "padding": 0,

        "font" : "%{boldFont}"
    },

    "List": {
        "inheritProperties" : true,
        "padding": 2,
        "ViewProvider" : {
            "font" : "bold",
            "color": "white"
        }
    },

    "ImageLabel": {
        "padding": 4
    },

    "CompList": {
        "inheritProperties" : true,

        "Label" : {
            "padding": 4,
            "font" : "bold",
            "color": "white"
        },

        "ImageLabel" : {
            "padding": 4,
            "font" : "bold",
            "color": "white"
        },

        "padding": 2,
        "listLayout"  : 4
    },

    "Combo": {
        "ComboPadPan": {
            "border"    : "plain",
            "background": "black",
            "autoHide"  : true
        },

        "ReadonlyContentPan": {
            "padding": 0,
            "background" : null
        },

        "EditableContentPan": {
            "TextField": {
                "inheritProperties" : true,

                "border"    : null,
                "background": null,
                "padding"  : [ 0,0,0,0 ]
            },

            "padding": 4,
            "borderLayout" : 0
        },

        "ArrowButton": {
            "inheritProperties" : true,
            "arrowSize" : 12,
            "padding" : [4,0,4,0]
        },

        "List": {
            "inheritProperties" : true,
            "ViewProvider" : {
                "color" : "white",
                "font"  : "bold"
            },

            "gap" : 4,

            "views" :  {
                "select"    : null,
                "topMarker" : null,
                "marker"    : [  [ { ".border" : [ null, 0, 6 ] }, { ".gradient" : ["red", "orange" ] } ] ]
            }
        },

        "CompList": {
            "inheritProperties" : true,

            "Label" : {
                "inheritProperties" : true,
                "padding":4,
                "color": "white"
            },

            "ImageLabel" : {
                "padding":4,
                "Label" : {
                    "color" : "white"
                }
            },

            "views" :  {
                "select"    : null,
                "topMarker" : null,
                "marker"    : [  [ { ".border" : [ null, 0, 6 ] }, { ".gradient" : ["red", "orange" ] } ] ]
            }
        },

        "padding"      : [ 0, 4, 0, 4 ],
        "border"       : {
            "focuson" :  { ".border" : [ "orange", 3, 6 ] },
            "focusoff":  { ".border" : [ "orange", 2, 6 ] }
        },

        "background" : null,
        "borderLayout" : 0,
        "selectView" :  null
    },

   "RulerPan" :{
        "NumLabels": {
            "color": "red"
        },

        "PercentageLabels": {
            "color": "red"
        }
    },

    "Slider": {
        "GaugePan" : {
            "preferredSize" : [ 2, 2 ],
            "background"    : "red"
        },

        "border": {
            "focuson" :  { ".border" : [ "red", 1, 3 ] },
            "focusoff":  { "@zebkit.draw.View":[] }
        },

        "views" : {
             "horHandle": { "@zebkit.draw.RoundBorder": [ "red", 2 ], "fillColor" : "orange"  },
             "verHandle": { "@zebkit.draw.RoundBorder": [ "red", 2 ], "fillColor" : "orange"  }
        },

        "padding"   : 4
    },

    "MenuItem" : {
        "padding": [ 4,4,4,4],

        "ImageLabel": {
            "color"   : "white",
            "padding" : 4,
            "font"    : ["Arial", "bold", 14]
        },

        "Checkbox": {
            "view": {
                "pressed.*"       : { "@zebkit.draw.StringRender":[ "✓", [ "Arial", "bold", 16], "gray" ] },
                "pressed.disabled": { "@zebkit.draw.StringRender":[ "✓", [ "Arial", "bold", 16], "lightGray"] },
                "*"               : null
            }
        },

        "Radiobox": {
            "disabledColor": "lightGray",
            "view": {
                "pressed.*":        { "@zebkit.draw.StringRender":[ "•", [ "Arial", "bold", 18], "gray" ] },
                "pressed.disabled": { "@zebkit.draw.StringRender":[ "•", [ "Arial", "bold", 16], "lightGray" ] },
                "*": null
            }
        },

        "SubImage": {
            "padding": [ 0, 0, 0, 4],
            "view": {
                "pressed" :  { "@zebkit.draw.ArrowView" : [ "right", null, "red"], "width":8, "height":10  },
                "*"       : null
            }
        }
    },

    "Menu": {
        "Line": {
            "padding": 4,
            "color": "red"
        },

        "MenuItem" : {
            "inheritProperties" : true,
            "ImageLabel": {
                "inheritProperties" : true
            }
        },

        "border"     : { ".border": [ "red", 2 ]  },
        "background" : "black",
        "padding"   : [ 4,0,4,0 ],
        "views"      : {
            "marker" : { ".gradient": [ "orange", "red"  ] }
        },
        "listLayout": 0
    },

    "Menubar": {
        "inheritProperties" : true,

        "MenuItem" : {
            "inheritProperties" : true,
            "padding"  : [6, 16, 6, 16],
            "ImageLabel": {
                "inheritProperties" : true,
                "color" : "white"
            }
        },


        "background" : null ,
        "padding"    : [0,0,0,0],
        "flowLayout" : 0,
        "border"     : { ".border": [ "red", 1, 0, "top" ]},
        "views"      : {
            "select" : { ".gradient": [ "red", "orange"  ] },
            "marker" : { ".gradient": [ "orange", "red"  ] }
        }
    },

    "Tooltip": {
        "Label": {
            "color"  : "white",
            "padding": 2
        },

        "ImageLabel": {
            "Label": {
                "color"  : "white"
            }
        },

        "padding"    : 6,
        "background" : {".gradient" : [ "black", "gray"]},
        "border"     : { "@zebkit.ui.Tooltip.TooltipBorder" : [ "white", 1 ]},
        "flowLayout" : [ "center", "top" ]
    },

    "Toolbar": {
        "Combo": {
            "background": "%{palette.white}",
            "border"    : { ".border": "rgb(200,180,200)" },
            "padding"  : [1, 4, 1, 1]
        },

        "ToolPan": {
            "padding" : 4,

            "border": {
                "over"        : "plain",
                "*"           : null,
                "pressed.over": { ".border": [ "#E6563A", 1, 6] }
            },

            "background": {
                "over"        : "orange",
                "*"           : null,
                "pressed.over": "#FF8637"
            }
        },

        "ImagePan": {
            "padding": 4
        },

        "Line" : {
            "colors": "lightGray"
        },

        "Checkbox": {
            "inheritProperties" : true,

            "Box": {
                "border"     : { ".border": [ "gray", 1, 6 ] },
                "background" : { ".gradient" : [ "gray", "black" ] },
                "view"       :  {
                    "pressed.out"         : { "@zebkit.draw.CheckboxView" : [ "white"] },
                    "out"        : { "@zebkit.draw.View": [] },
                    "over"       : { "@zebkit.draw.View": [] },
                    "pressed.over"        : { "@zebkit.draw.CheckboxView" : "white"  },
                    "pressed.disabled"    : { "@zebkit.draw.CheckboxView" : "#AAAAAA" },
                    "disabled"   : { "@zebkit.draw.View" : [] }
                }
            },

            "canHaveFocus": false,
            "padding": 4,
            "background": {
                "pressed.*": "orange",
                "*": null
            }
        },

        "Radiobox" : {
            "inheritProperties" : true,
            "inherit": [ "%{Radiobox}", "%{Toolbar.Checkbox}"]
        },

        "flowLayout" : [ "left", "center", "horizontal", 6 ],
        "border" : { ".border": ["lightGray", 2, 6 ] },
        "padding": 4
    },

    "CollapsiblePan": {
        "Label": {
            "font"  : "bold",
            "color" : "white"
        },

        "Header":{
            "padding"   : 4,
            "flowLayout": 4,
            "border"  : {
                "over" : { ".border": [ "orange", 1, 0, "bottom" ] },
                "*"    : { ".border": [ "red", 1, 0,  "bottom"] }
            }
        },

        "ImageLabel": {
            "Label": {
                "font"  : "bold",
                "color" : "white"
            }
        },

        "Toogle": {
            "Box": {
                "padding": 0,
                "preferredSize" : [ -1, -1],
                "background" : null,
                "border": null,
                "view" : {
                    "*"          : { "@zebkit.draw.ToggleView": [ true, "red", null, 14, 14, null ]},
                    "pressed.*"  : { "@zebkit.draw.ToggleView": [ false, "red", null, 14, 14, null ]}
                }
            }
        },

        "GroupPan" : {
            "border": "plain"
        },

        "border": "plain",
        "borderLayout": 0
    },

    "Window": {
        "CaptionPan": {
            "borderLayout": 0,
            "background"  : {
                "active"  : { "@zebkit.draw.CaptionBgView": "red" },
                "inactive": { "@zebkit.draw.CaptionBgView": "orange" }
            },
            "padding": 8
        },

        "ContentPan": {
            "borderLayout": 0
        },

        "TitleLab": {
            "font" : ["Verdana", 16],
            "color": "%{palette.white}"
        },

        "StatusPan": {
            "flowLayout": ["right","center"]
        },

        "SizerPan": {
            "padding" : [0, 0, 1, 2],
            "preferredSize" : [18, 16],
            "view"    : { "@zebkit.draw.TriangleShape": [ "red", 2 ] }
        },

        "Icon": {
            "visible":false
        },

        "border": {
            "active"   : { ".border":["red", 4, 8], "gap":2 },
            "inactive" : { ".border":["red", 4, 8], "gap":2 }
        },

        "background": "black",
        "padding"   : [0,0,2,0],
        "buttons"   : {
            "close" : {
                "background" : {
                    "over"   : { "@zebkit.draw.CheckboxView": [ "white" ] },
                    "out"    : { "@zebkit.draw.CheckboxView": [ "black" ] },
                    "pressed": { "@zebkit.draw.CheckboxView": [ "orange" ] }
                },
                "preferredSize" : [ 16, 16 ]
            }
        }
    },

    "Spin" : {
        "IncButton" : {
            "inheritProperties": true,
            "padding": 0,
            "fireParams": [ true, 100, 1000],
            "arrowSize": [16,10],
            "direction": "top"
        },

        "DecButton" : {
            "inheritProperties": true,
            "padding": 0,
            "fireParams": [ true, 100, 1000],
            "arrowSize": [16,10],
            "direction": "bottom"
        },

        "TextField" : {
            "color": "red",
            "font" : "bold",
            "border": null
        },

        "canHaveFocus" : true,

        "padding" : [ 2, 4, 2, 4],

        "border" : {
            "focuson" :  { ".border" : [ "orange", 2 ] },
            "focusoff":  { ".border" : [ "orange", 1 ] }
        },

        "background": { ".gradient" : [ "black", "#444444" ] }
    },

    "StatusBarPan" : {
        "borderView" : "etched"
    }
}