{
    "DefViews": {
        "color" : "%{zebkit.palette.gray}",
        "font"  : "12px 'Lucida Grande', 'Lucida Sans', Arial, sans-serif"
    },

    "BaseTree" : {
        "lineColor" : "red",
        "color"     : "red",
        "itemGapX"  : 4,
        "itemGapY"  : 4,
        "views": {
            "leafSign"     : null,
            "collapsedSign": null,
            "expandedSign" : null,

            "collapsedToggle"     : { "@zebkit.draw.ArrowView":  [ "right",  null, "orange"], "width":10 , "height":14 },
            "expandedToggle"      : { "@zebkit.draw.ArrowView":  [ "bottom", null, "orange"], "width":14, "height":10  },

            "focusOnSelect"  : { ".border" : [ "orange", 2, 6 ] },
            "focusOffSelect" : { ".border" : [ "gray", 2, 6 ]   }
        }
    },

    "DefViews" : {
        "color" : "red",
        "font"  : "bold"
    },

    "Tree": {
        "inheritProperties" : true
    },

    "CompTree": {
        "Checkbox" : {
            "inheritProperties" : true,
            "Label"   : {
                "color"   : "red",
                "font"    : "bold"
            }
        },

        "Combo" : {
            "inheritProperties" : true,
            "background" : null,
            "border"     : "plain",
            "CompList" : {
                "Label" : {
                    "font" : "bold",
                    "color" : "red"
                },

                "views" :  {
                    "select"    : { ".border" : ["white", 2, 6 ] },
                    "topMarker" : null,
                    "marker"    : [  [ { ".border" : [ null, 0, 6 ] }, { ".gradient" : ["white", "lightGray" ] } ] ]
                }

            },
            "List" : {
                "ViewProvider" : {
                    "font" : "bold",
                    "color": "red"
                }
            }
        },

        "Label" : {
            "inheritProperties" : true,
            "color"   : "red",
            "font"    : "bold",
            "padding" : 4
        },

        "inheritProperties" : true
    }
}